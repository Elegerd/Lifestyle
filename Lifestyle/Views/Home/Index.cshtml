@model Lifestyle.Models.Authorization
@{
    ViewBag.Title = "Home Page";
}


<div class="row">
    <div class="col-sm-9" style="border-color:darkgreen">

        Скоро здесь будет картинка)))

    </div>

    <div class="col-sm-3 col-xs-12 ">

        <span class="border border-primary"></span>

        <div class="container-fluid" style="background-color:cornflowerblue">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <form>
                <div class="form-group">
                    <label for="email">Почтовый ящик: </label>
                    @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="pwd">Пароль: </label>
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
                <div class="checkbox">
                    <label><input type="checkbox">Запомнить меня</label>
                </div>
                <form class="form-inline">
                    <div class="form-group">
                        @Html.ActionLink("Регистрация", "Register", "Account")
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-default" >Войти</button>
                    </div>

                </form>
             
            </form>
            }
</div>
    </div>

</div>