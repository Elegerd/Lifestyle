@model Lifestyle.Models.User
@{
    ViewBag.Title = "Редактирование пользователя";
}

<h2>Редактирование пользователя</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label>Id</label>
        @Html.TextBoxFor(x => x.UserId, new { @readonly = "readonly", @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Имя</label>
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label>Дата Рождения</label>
        @Html.EditorFor(model => model.BirthDate, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        <label>Email</label>
        @Html.TextBoxFor(x => x.Email, new { @readonly = "readonly", @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Пароль</label>
        @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @type = "password" })
    </div>

    <div class="form-group">
        <label>Рост</label>
        @Html.TextBoxFor(x => x.Height, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Вес</label>
        @Html.TextBoxFor(x => x.Weight, new { @class = "form-control" })
    </div>

    <div class="container">
        <p>Выберете пол: </p>
        <form>
            <div class="radio">
                <label><input id="Sex" type="radio" name="Sex" value="true" checked>Мужской</label>
            </div>
            <div class="radio">
                <label><input id="Sex" type="radio" name="Sex" value="false" checked>Женский</label>
            </div>
            <div class="radio">
                <label><input id="Sex" type="radio" name="Sex" value="NULL" checked>Не выбран</label>
            </div>
        </form>
    </div>


    <button type="submit" class="btn btn-primary"> Сохранить </button>
    <a href="~/Daybook" class="btn btn-default"> Отмена </a>
}

