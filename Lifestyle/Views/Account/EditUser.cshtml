@model Lifestyle.Models.User
@{
    ViewBag.Title = "Редактирование пользователя";
    Layout = "~/Views/Shared/Layout_2.cshtml";
}
<div class="semi-container center-block">
    <h2 class="text-center">Редактирование пользователя</h2>

    <div class="container-fluid" style="background-color:rgb(0, 0, 0, 0.8)">
        <form method="post" action="">

            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <div class="row-fluid">
                    <div class="col-xs-12">
                        <div class="col-sm-6">
                            <!--
            <div class="form-group">
              Html.HiddenFor(x => x.UserId, new { readonly = "readonly", class = "form-control" })
          </div>
        -->

                            <div class="form-group">
                                <label>Имя</label>
                                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Enter your name" })
                            </div>

                            <div class="form-group">
                                <label>Дата Рождения</label>
                                @Html.TextBoxFor(x => x.BirthDate, "{0:dd.MM.yyyy}", new { @class = "form-control", @placeholder = "Enter birth data dd.mm.yyyy" })
                                @Html.ValidationMessageFor(x => x.BirthDate, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <label>Email</label>
                                @Html.TextBoxFor(x => x.Email, new { @readonly = "readonly", @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <label>Пароль</label>
                                @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @type = "password", @placeholder = "Enter password" })
                                @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-sm-6 ">
                            <div class="form-group">
                                <label>Рост</label>
                                @Html.TextBoxFor(x => x.Height, new { @class = "form-control", @placeholder = "Enter your height" })
                            </div>

                            <div class="form-group">
                                <label>Вес</label>
                                @Html.TextBoxFor(x => x.Weight, new { @class = "form-control", @placeholder = "Enter your weight" })
                            </div>

                            <div class="container">
                                <div class="form-group">
                                    <label>Выберете пол: </label>

                                    @if (Model.Sex == true)
                                    {
                                        <div class="radio">
                                            <label><input id="Sex" type="radio" name="Sex" value="true" checked>Мужской</label>
                                        </div>
                                        <div class="radio">
                                            <label><input id="Sex" type="radio" name="Sex" value="false">Женский</label>
                                        </div>
                                        <div class="radio">
                                            <label><input id="Sex" type="radio" name="Sex" value="NULL">Не выбран</label>
                                        </div>
                                    }
                                    else
                                    {
                                        if (Model.Sex == false)
                                        {
                                            <div class="radio">
                                                <label><input id="Sex" type="radio" name="Sex" value="true">Мужской</label>
                                            </div>
                                            <div class="radio">
                                                <label><input id="Sex" type="radio" name="Sex" value="false" checked>Женский</label>
                                            </div>
                                            <div class="radio">
                                                <label><input id="Sex" type="radio" name="Sex" value="NULL">Не выбран</label>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="radio">
                                                <label><input id="Sex" type="radio" name="Sex" value="true">Мужской</label>
                                            </div>
                                            <div class="radio">
                                                <label><input id="Sex" type="radio" name="Sex" value="false">Женский</label>
                                            </div>
                                            <div class="radio">
                                                <label><input id="Sex" type="radio" name="Sex" value="NULL">Не выбран</label>
                                            </div>
                                        }
                                    }


                                </div>
                            </div>
                        </div>



                    </div>
                   
                </div>



                <div class="row-fluid">
                    <div class="col-sm-6 ">

                    </div>
                    <div class="col-sm-6 ">

                        <p style="text-indent: 100px"></p>
                        <button type="submit" class="btn btn-primary" style="margin-top:9px"> Сохранить </button>
                        <a href="ProfileUser" class="btn btn-default" style="margin-top:9px"> Отмена </a>

                    </div>
                </div>



            </div>
        </form>


    </div>


</div>
